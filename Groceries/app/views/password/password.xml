<Page loaded="loaded">
	<Page.actionBar>
		<ActionBar title="Reset Password"></ActionBar>
	</Page.actionBar>
	<ScrollView>
		<StackLayout>
			<Label text="Enter the email address you used to register for Groceries to reset your password." textWrap="true" />

			<GridLayout>
				<TextField text="{{ email }}" id="email" hint="Email Address" keyboardType="email" autocorrect="false" autocapitalizationType="none" returnKeyType="done" returnPress="reset" />
				<ActivityIndicator busy="{{ authenticating }}" />
			</GridLayout>

			<Button text="Reset password" id="resetButton" tap="reset" />
		</StackLayout>
	</ScrollView>
</Page>
